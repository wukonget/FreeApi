<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipChildren="false"
    android:layout_height="match_parent"
    android:layerType="software">

    <RelativeLayout
        android:layout_width="match_parent"
        android:clipChildren="false"
        android:layout_height="@dimen/height200">
    <android.support.v4.view.ViewPager
        android:id="@+id/banner"
        android:layout_marginLeft="@dimen/margin50"
        android:layout_marginRight="@dimen/margin50"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height150"/>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/dot_container"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin12"
        android:background="@drawable/thirty_black_corner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>